    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img1"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/img3"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/img4"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/img5"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/start"
        android:text="start"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <Button
        android:id="@+id/stop"
        android:text="stop"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</LinearLayout>